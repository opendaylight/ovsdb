              org.opendaylight.yang.gen.v1.urn.opendaylight.inventory.rev130819.nodes,
              org.opendaylight.yangtools.yang.binding,
              org.apache.felix.dm,
              org.slf4j,
              org.osgi.framework,
              *
            </Import-Package>
            <Bundle-Activator>
              org.opendaylight.ovsdb.neutron.Activator
            </Bundle-Activator>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

